@model esercizioS17L1.Models.Dipendente

@{
    ViewBag.Title = "Modifica Dipendente";
}

<h2>Modifica Dipendente</h2>

<form asp-controller="Dipendenti" asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cognome" class="control-label"></label>
        <input asp-for="Cognome" class="form-control" />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Indirizzo" class="control-label"></label>
        <input asp-for="Indirizzo" class="form-control" />
        <span asp-validation-for="Indirizzo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CodiceFiscale" class="control-label"></label>
        <input asp-for="CodiceFiscale" class="form-control" />
        <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Coniugato" class="control-label"></label>
        <input type="checkbox" asp-for="Coniugato" class="form-check-input" />
        <span asp-validation-for="Coniugato" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumeroFigliACarico" class="control-label"></label>
        <input asp-for="NumeroFigliACarico" class="form-control" />
        <span asp-validation-for="NumeroFigliACarico" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mansione" class="control-label"></label>
        <input asp-for="Mansione" class="form-control" />
        <span asp-validation-for="Mansione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salva Modifiche</button>
    </div>
</form>

<div>
    <a asp-controller="Dipendenti" asp-action="Index">Torna alla lista</a>
</div>
