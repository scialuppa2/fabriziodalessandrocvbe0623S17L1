@model IEnumerable<esercizioS17L1.Models.Pagamento>

<h2>Anagrafica Pagamenti</h2>

<table class="table">
    <thead>
        <tr>
            <th>Periodo</th>
            <th>Ammontare</th>
            <th>Tipologia</th>
            <th>Dipendente</th> <!-- Nuova colonna per il nome del dipendente -->
            <th></th> <!-- Azioni -->
        </tr>
    </thead>
    <tbody>
        @foreach (var pagamento in Model)
        {
            <tr>
                <td>@pagamento.Periodo.ToString("dd/MM/yyyy")</td>
                <td>@pagamento.Ammontare</td>
                <td>@pagamento.TipologiaPagamento</td>
                <td>@(DipendenteRepository.GetDipendenteById(pagamento.DipendenteID)?.NomeCompleto)</td> <!-- Mostra il nome del dipendente -->
                <td>
                    @Html.ActionLink("Dettagli", "Details", new { id = pagamento.ID }) |
                    @Html.ActionLink("Modifica", "Edit", new { id = pagamento.ID }) |
                    @Html.ActionLink("Elimina", "Delete", new { id = pagamento.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Aggiungi Pagamento", "Create")
</p>
